<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="CheckAgree"  Content="Я согласен на получение рассылки" Checked="CheckAgree_Checked" 
                  Margin="282,222,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button x:Name="SubscriptionButton" Content="Подписаться" Margin="282,257,0,0" Width="150" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Click="SubscriptionButton_Click"/>

        <Label Content="Логин" Margin="282,144,0,0" Width="52" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Пароль" Margin="282,188,0,0" Width="52" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox x:Name="LoginTextBox" Margin="342,149,0,0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="PasswordTextBox" Margin="342,193,0,0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>

    </Grid>
</Window>
